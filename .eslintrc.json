{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [ 1, {
              "extensions": [ ".js", ".jsx"] }
          ],
          "react/function-component-definition": [1, {
            "namedComponents":  "arrow-function",
            "unnamedComponents":  "arrow-function" 
          }]
    }
}
